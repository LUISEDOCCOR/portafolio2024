---
import '@fontsource-variable/dm-sans';
import ButtonFollow from '../components/ButtonFollow.astro'
import Birthday from '../components/tags/Birthday.astro';
import Briefcase from '../components/tags/Briefcase.astro';
import Repositories from '../components/tags/Repositories.astro';
import Section from '../components/Section.astro';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
import { getImageProfile } from '../utils/github'
import { GetPublicRepos } from '../utils/github';

const public_repos = await GetPublicRepos()
const  avatar_url = await getImageProfile()
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Luis Eduardo</title>
		<ViewTransitions/>
	</head>
	<body class="max-w-4xl mx-auto border-x-[.5px] min-h-screen border-neutral-700">
		<header class="w-full">
			<!-- Profile name and @ -->
			<section class="flex flex-col justify-center px-3 space-y-1 fixed h-20 w-[896px] backdrop-blur-2xl">
				<h2 class="font-semibold text-xl" >Luis Eduardo Ocegueda Cortes</h2>
				<h3 class="text-neutral-400">{public_repos} Repos</h3>
			</section>
			<!-- Banner / Image Profile -->
			<section class="pt-20">
				<picture>
					<img 
					src="./banner.webp" 
					alt="banner image"
					class="w-full object-cover object-center rounded-sm h-[150px] xl:h-[250px]"
					>
				</picture>
				<article class="px-8 flex justify-between items-end -mt-12 xl:-mt-16">
					<picture>
						<img 
						src={avatar_url}
						alt="profile image"
						class="object-cover object-center rounded-full aspect-square w-28 h-28 xl:w-40 xl:h-40"
					>
					</picture>
					<ButtonFollow/>
				</article>
			</section>
			<!-- Info profile -->
			<section class="px-8 mt-8">
				<h1 class="font-bold text-2xl xl:text-3xl">Luis Eduardo Ocegueda Cortes</h1>
				<h3 class="text-neutral-400 text-md xl:text-lg">@Programador web</h3>
				<p class="text-xl mt-4">+2 de experiencia. Desarrollador 
				<strong class="text-[#c501e2]">Front-end</strong> y <strong class="text-[#c501e2]">Back-end</strong>
				autodidacta. Entusiasta en la programaci√≥n.</p>
			</section>
			<!-- Tags profile -->
			<section class="px-8 mt-4 flex items-center gap-3 flex-wrap">
				<Birthday/>
				<Briefcase/>
				<Repositories/>
			</section>
			<!-- Profile sections "Pages" -->
			<section class="px-8 grid mt-4 grid-cols-2 xl:grid-cols-4 xl:mt-6">
				<Section label="Proyectos" href="/"/>
				<Section label="Habilidades" href="/skills"/>
				<Section label="Certificaciones" href="/certifications"/>
				<Section label="Contacto" href="/contact"/>
			</section>
		</header>
		<main class="mt-8 pb-12">
			<slot/>
		</main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		color-scheme: dark ligth;
	}
	html {
		font-family: 'DM Sans Variable', sans-serif;
		background: #151515;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
